@{
    ViewBag.Title = "Create";
}



@using (Html.BeginForm())
{
    

 <div id="request">

    <fieldset>
        <legend>New Request</legend>
        
        <div id="information">

    <label for="name">Name:<span class="required">*</span></label>
        <input  type="text" name="name" placeholder="Name request"/>

    <label for="urlBase">Url Base:<span class="required">*</span></label>
        <input  type="url"  name="urlBase" placeholder="Url"/>

    <label for="action">Action:<span class="required">*</span></label>
        <input  type="text"   name= "action"placeholder="Action"/>

    <label for="httpVerb">Http Verb:<span class="required">*</span></label>
        <input  type="text" list="httpVerb" name="httpVerb">
            <datalist id="httpVerb">
                <option value="GET">
                <option value="PUT">
                <option value="POST">
                <option value="PATH">
                <option value="DELETE">
                </datalist>
            

            </div>
        <p>
            <input type="submit" value= "New Request" />
        </p>

        
   </fieldset>


</div>
    
}