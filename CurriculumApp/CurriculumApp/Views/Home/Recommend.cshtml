@{
    ViewBag.Title = "Recommend";
}

<h2>Recommend</h2>



@Html.ActionLink("Create New", "Create")

<table>
    <tr>
        <th>Nombre</th>
        <th>Telefono</th>
        <th>Email</th>
        <th>Comentario</th>
        <th>Actions</th>
        

    </tr>

    @foreach (var item in ViewBag.recommends)
    {
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Telefono</td>
            <td>@item.Email</td>
            <td>@item.Comentario</td>
            <td>
                    @Html.ActionLink("Delete","Delete", new { id=item.id})                  
                   
           </td>
        </tr>
    }


</table>
