@{
    ViewBag.Title = "Contact";
}



<div id="contact-form">
    <h1>Contacteme</h1>

    <form>
        <label for="name">Name:<span class="required">*</span></label>
        <input type="text" id="name" name="name" value="" placeholder="Su Nombre" required="required" />

        <label for="email">Email Address: <span class="required">*</span></label> 
        <input type="email" id="email" name="email" value="" placeholder="sucorreo@email.com" required="required" /> 


         <label for="message">Message: <span class="required">*</span></label> 
         <textarea id="message" name="message" placeholder="Escriba su comentario." required="required"></textarea> 

        <input type="submit" value="ENVIAR!" id="submit" />

    </form>
</div>

